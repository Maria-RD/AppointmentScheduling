@model TurnsBackFront.Models.Patient

@{
    ViewData["Title"] = "Editing " + Model.Name + " " + Model.Surname + " Patient";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h5>Patient</h5>
    <hr />
    <div class="row">
        <div>
            <form class="col-s12" asp-action="Edit">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        <input asp-for="Name" type="text" class="validate">
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="input-field col s6">
                        <input asp-for="Surname" type="text" class="validate">
                        <label asp-for="Surname"></label>
                        <span asp-validation-for="Surname"></span>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">home</i>
                        <input asp-for="Address" type="text" class="validate">
                        <label asp-for="Address"></label>
                        <span asp-validation-for="Address"></span>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">phone</i>
                        <input asp-for="Phone" type="tel" class="validate">
                        <label asp-for="Phone"></label>
                        <span asp-validation-for="Phone"></span>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">local_post_office</i>
                        <input asp-for="Email" type="email" class="validate">
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col s6 m6">
                        <button class="btn waves-effect waves-light green accent-3" type="submit" name="action">
                            save
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    <div class="col s6 m6">
                        <a asp-action="Index" class="waves-effect waves-light btn indigo darken-3"><i class="material-icons left">undo</i>return</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>