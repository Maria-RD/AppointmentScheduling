@model TurnsBackFront.Models.Speciality

@{
    ViewData["Title"] = "Deleting " + Model.Description + " Speciality";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h4>
        Are you sure you want to delete the following speciality?
    </h4>
    <h5>Speciality</h5>
    <hr />
    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable indigo lighten-4">
                <div class="card-content">
                    <span class="card-title"><h5><b>@Html.DisplayFor(model => model.Description)</b></h5></span>
                </div>
                <div class="card-action indigo darken-4">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="SpecialityId" />
                        <input type="submit" value="Delete" class="waves-light btn-small red white-text" />
                        <a asp-action="Index" class="right green-text text-accent-3">Return</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
